<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:primitive="urn:import:edu.stanford.bmir.protege.web.client.primitive">
    <ui:with field="wp" type="edu.stanford.bmir.protege.web.resources.WebProtegeClientBundle"/>
    <ui:with field="msg" type="edu.stanford.bmir.protege.web.client.Messages"/>
    <ui:style>
        .main {

        }
        .formField {
        }
        .uploadContainer {
            padding-top: 10px;
            padding-bottom: 10px;
        }
        .helpText {
            max-width: 480px;
        }
    </ui:style>
    <g:HTMLPanel addStyleNames="{wp.style.form}">
        <div class="{wp.style.formGroup}">
            <g:Label text="{msg.projectName}" addStyleNames="{wp.style.formLabel}"/>
            <g:TextBox ui:field="projectNameField" addStyleNames="{style.formField}"/>
        </div>
        <div class="{wp.style.formGroup}">
            <g:Label text="{msg.projectSettings_language}"  addStyleNames="{wp.style.formLabel}"/>
            <primitive:DefaultLanguageEditor ui:field="projectLanguageField" addStyleNames="{style.formField}"/>
            <label class="{wp.style.formHelpText} {style.helpText}"><ui:safehtml from="{msg.projectSettings_language_helpText}"/></label>
        </div>
        <div class="{wp.style.formGroup}">
            <g:Label text="{msg.projectSettings_description}"  addStyleNames="{wp.style.formLabel}"/>
            <g:TextArea ui:field="projectDescriptionField" addStyleNames="{style.formField}" visibleLines="5"/>
        </div>

        <div class="{wp.style.formGroup}">
            <g:Label text="{msg.repoURI}" addStyleNames="{wp.style.formLabel}"/>
            <g:TextBox ui:field="repoURIField" addStyleNames="{style.formField}"/>
        </div>

        <div class="{wp.style.formGroup}">
            <g:FormPanel ui:field="repoFormPanel">
                <g:VerticalPanel ui:field="repoVerticalPanel">
                    <g:Hidden ui:field="repoURI" />
                    <g:Hidden ui:field="personalAccessToken" />
                    <g:Hidden ui:field="user" />
                    <g:Hidden ui:field="project" />
                    <g:Hidden ui:field="path" />
                    <g:Hidden ui:field="branch" />
                </g:VerticalPanel>
            </g:FormPanel>
        </div>

        <g:HTMLPanel>
            <g:Label text="Select Project Creation Source" addStyleNames="{wp.style.formLabel}"/>
            <span>
                <g:RadioButton ui:field="cloneSelectorField" name="yesNoButton" value="true" enabled="true">Clone from repo</g:RadioButton>

                <g:HTMLPanel ui:field="repoCloneArea" addStyleNames="{wp.style.formGroup}">
                    <div class="{wp.style.formGroup}">
                        <g:InlineLabel text="Relative Path in Repo: " addStyleNames="{wp.style.formLabel}"/>
                        <g:TextBox ui:field="pathField" />
                        <label class="{wp.style.formHelpText} {style.helpText}"><ui:safehtml from="{msg.projectSettings_repopath_helpText}"/></label>
                    </div>

                    <div class="{wp.style.formGroup}">
                        <g:InlineLabel text="Branch: " addStyleNames="{wp.style.formLabel}"/>
                        <g:TextBox ui:field="branchField" />
                        <label class="{wp.style.formHelpText} {style.helpText}"><ui:safehtml from="{msg.projectSettings_branch_helpText}"/></label>
                    </div>
                </g:HTMLPanel>

                <g:RadioButton ui:field="uploadSelectorField" name="yesNoButton" value="false" enabled="true">Upload from file</g:RadioButton>
            </span>
        </g:HTMLPanel>

        <g:HTMLPanel ui:field="fileUploadArea" addStyleNames="{wp.style.formGroup}">
            <g:Label text="Source File" addStyleNames="{wp.style.formLabel}"/>
            <g:HTMLPanel addStyleNames="{style.uploadContainer}">
                <g:FormPanel ui:field="formPanel">
                    <g:FileUpload ui:field="fileUpload"/>
                </g:FormPanel>
            </g:HTMLPanel>
            <label class="{wp.style.formHelpText} {style.helpText}"><ui:safehtml from="{msg.projectSettings_owl_import_helpText}"/></label>
        </g:HTMLPanel>

    </g:HTMLPanel>
</ui:UiBinder>