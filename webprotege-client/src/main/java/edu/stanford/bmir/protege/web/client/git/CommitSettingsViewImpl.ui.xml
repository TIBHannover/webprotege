<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field="wp" type="edu.stanford.bmir.protege.web.resources.WebProtegeClientBundle"/>
    <ui:style>
        .main-panel {
            padding: 20px;
        }
    </ui:style>
    <g:HTMLPanel addStyleNames="{style.main-panel}">
    <g:HTMLPanel ui:field="htmlPanel" addStyleNames="{style.main-panel}">
        <div class="{wp.style.formGroup}">
            <g:InlineLabel text="Branch: " addStyleNames="{wp.style.formLabel}"/>
            <g:ListBox ui:field="branchListBox" visibleItemCount="1"/>
        </div>
        <div class="{wp.style.formGroup}">
            <g:InlineLabel text="New Branch from Selection: " addStyleNames="{wp.style.formLabel}"/>
            <g:TextBox ui:field="newBranchTextBox" />
        </div>
        <div class="{wp.style.formGroup}">
            <g:InlineLabel text="Relative Path in Repo: " addStyleNames="{wp.style.formLabel}"/>
            <g:TextBox ui:field="pathTextBox" />
        </div>
        <div class="{wp.style.formGroup}">
            <g:InlineLabel text="Ontology Name: " addStyleNames="{wp.style.formLabel}"/>
            <g:TextBox ui:field="ontologyNameTextBox" />
        </div>
        <div class="{wp.style.formGroup}">
            <g:InlineLabel text="Ontology Format: " addStyleNames="{wp.style.formLabel}"/>
            <g:ListBox ui:field="formatListBox" visibleItemCount="1"/>
        </div>
        <div class="{wp.style.formGroup}">
            <g:InlineLabel text="Imports Path in Repo: " addStyleNames="{wp.style.formLabel}"/>
            <g:TextBox ui:field="importsPathTextBox" />
        </div>
        <div class="{wp.style.formGroup}">
            <g:InlineLabel text="Commit message: " addStyleNames="{wp.style.formLabel}"/>
            <g:TextBox ui:field="messageTextBox" />
        </div>
    </g:HTMLPanel>
        <g:InlineLabel ui:field="warningLabel" text="Please configure a Personal Access Token for being able to push to this repo. " addStyleNames="{wp.style.formLabel}"/>
    </g:HTMLPanel>


</ui:UiBinder>